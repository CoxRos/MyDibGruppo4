<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/backview"
    tools:context="gruppo4.dib.sms2016.mydib2016.business.logged.profilo.dati_personali.DatiPersonali">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/profilo_titolo"
                android:id="@+id/textView3"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="@color/background"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:id="@+id/view" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/profilo_nome"
                android:id="@+id/textView5"
                android:textSize="20dp"
                android:layout_below="@+id/view"
                android:layout_alignStart="@+id/view"
                android:layout_marginTop="29dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="20dp"
                android:text="@string/profilo_cognome"
                android:textSize="20dp"
                android:id="@+id/textView6"
                android:layout_below="@+id/textView5"
                android:layout_alignStart="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/profilo_email"
                android:textSize="20dp"
                android:layout_marginTop="18dp"
                android:id="@+id/textView7"
                android:layout_below="@+id/txtmatr"
                android:layout_alignStart="@+id/textView6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/profilo_media_pond"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:id="@+id/textView8"
                android:layout_below="@+id/textView7"
                android:layout_alignStart="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/profilo_media_arit"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textView9"
                android:layout_below="@+id/textView8"
                android:layout_alignStart="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/profilo_cfu"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textView10"
                android:layout_below="@+id/textView9"
                android:layout_alignStart="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="15dp"
                android:id="@+id/editNomeProfilo"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toEndOf="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="15dp"
                android:id="@+id/editCognomeProfilo"
                android:layout_alignBottom="@+id/textView6"
                android:layout_toEndOf="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/editEmailProfilo"
                android:layout_marginLeft="15dp"
                android:textSize="14dp"
                android:layout_alignBottom="@+id/textView7"
                android:layout_toEndOf="@+id/textView9" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/profilo_non_disp"
                android:id="@+id/mediaPondProfilo"
                android:textSize="17dp"
                android:layout_marginLeft="15dp"
                android:layout_alignBottom="@+id/textView8"
                android:layout_toEndOf="@+id/textView9" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/profilo_non_disp"
                android:id="@+id/mediaAritmProfilo"
                android:textSize="17dp"
                android:layout_marginLeft="15dp"
                android:layout_alignBottom="@+id/textView9"
                android:layout_toEndOf="@+id/textView9" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/profilo_non_disp"
                android:layout_marginLeft="15dp"
                android:id="@+id/cfuProfilo"
                android:textSize="17dp"
                android:layout_alignBottom="@+id/textView10"
                android:layout_toEndOf="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profilo_matricola"
                android:id="@+id/txtmatr"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="15dp"
                android:id="@+id/matricolaProfilo"
                android:layout_alignBottom="@+id/txtmatr"
                android:layout_toEndOf="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="BASE LAUREA:"
                android:layout_marginTop="10dp"
                android:textColor="@color/darkblack"
                android:id="@+id/textView13"
                android:textSize="16dp"
                android:layout_below="@+id/textView10"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Non disponibile"
                android:layout_marginTop="10dp"
                android:id="@+id/baseLaureaProfilo"
                android:layout_below="@+id/cfuProfilo"
                android:layout_alignStart="@+id/cfuProfilo" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
