<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="125dp"
        android:id="@+id/scalaVoto"
        android:layout_marginLeft="-5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programmazione"
        android:id="@+id/nomeEsame"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/ic_exam"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/scalaVoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voto:"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/ic_mark"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_below="@+id/nomeEsame"
        android:layout_toEndOf="@+id/scalaVoto"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18"
        android:id="@+id/votoEsame"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CFU:"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/ic_credits"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/votoEsame"
        android:layout_alignBottom="@+id/votoEsame"
        android:layout_alignStart="@+id/dataEsame"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/cfuEsame"
        android:layout_marginStart="12dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16/02/2016"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/ic_calendar"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:id="@+id/dataEsame"
        android:layout_below="@+id/cfuEsame"
        android:layout_alignParentEnd="true" />
</RelativeLayout>