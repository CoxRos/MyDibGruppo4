<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:layout_marginBottom="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cosimo"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:drawableLeft="@mipmap/ic_user"
        android:drawablePadding="5dp"
        android:id="@+id/nomeRicercatoView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rossi"
        android:textColor="@color/black"
        android:id="@+id/cognomeRicercatoView"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nomeRicercatoView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Docente"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:drawableLeft="@mipmap/ic_docente"
        android:drawablePadding="5dp"
        android:textSize="25dp"
        android:id="@+id/tipoRicercatoView"
        android:layout_below="@+id/nomeRicercatoView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/drawer"
        android:layout_below="@+id/tipoRicercatoView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>